<!--pages/daochu/index.wxml-->
<canvas canvas-id='share' style='width:375px;height:580px'  hidden='{{canvasHidden}}'></canvas> 
<view class="pyg_index" wx:if="{{backImg}}" style="background-image: url({{backImg}})">
  <view class="content">
    <text>{{content}}</text>
  </view>
  <view class="biaoti">
<!--<text class="iconfont icon-jiahao jiahao" bindtap="chooseimage" wx:if="{{!showTouxiang}}"></text>-->
    <image style="width: 80px;height:80px;" class="touxiang" wx:if="{{touxiang}}" src="{{touxiang}}"/>
    <image class="xiaofu" wx:if="{{img}}" src="{{img}}" />
  </view>
</view>
 <view class="footer">
    <text class="title_item" bindtap="goBack">返回</text>
    <text class="title_item" bindtap="saveImageToPhotosAlbum">保存合影</text>
  </view>
